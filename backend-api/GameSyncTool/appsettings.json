{
  "TheGamesDB": {
    "ApiKey": "",
    "BaseUrl": "https://api.thegamesdb.net/",
    "Version": 1
  },
  "BlobStorage": {
    "ConnectionString": "",
    "ContainerName": "games-cache"
  },
  "SqlDatabase": {
    "ConnectionString": "",
    "DatabaseName": "switchlibrary-games",
    "CommandTimeout": 300,
    "EnableRetryOnFailure": true
  },
  "StorageMode": "Dual",
  "Platforms": {
    "NintendoSwitch": 4971,
    "NintendoSwitch2": 5021
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "System": "Warning",
      "GameSyncTool": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    },
    "File": {
      "Path": "logs/gamesync-.log",
      "Append": true,
      "FileSizeLimitBytes": 10485760,
      "MaxRollingFiles": 5
    }
  }
}
